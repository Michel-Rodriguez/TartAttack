<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sesion_Usuario_Aut">


    <Button
        android:id="@+id/buttGoogle"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="84dp"
        android:background="#F8360B"
        android:drawableStart="@drawable/google"
        android:text="@string/Acceder_Google"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttRegistrar" />

    <Button
        android:id="@+id/buttRegistrar"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="84dp"
        android:background="#3F51B5"
        android:text="@string/Registrar"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butIniciar" />

    <EditText
        android:id="@+id/textEmail"
        android:layout_width="350dp"
        android:layout_height="62dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="27dp"
        android:autoText="false"
        android:background="@color/white"
        android:backgroundTint="#9BFFFFFF"
        android:drawableStart="@drawable/ic_mail"
        android:hint="Introduzca email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textPassw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textPassw"
        android:layout_width="350dp"
        android:layout_height="62dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="57dp"
        android:background="@color/white"
        android:backgroundTint="#9BFFFFFF"
        android:drawableStart="@drawable/ic_key"
        android:hint="Introduzca contraseÃ±a"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEmail" />

    <Button
        android:id="@+id/butIniciar"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="84dp"
        android:background="@color/teal_700"
        android:text="@string/iniciar_sesion"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttRegistrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPassw" />
</androidx.constraintlayout.widget.ConstraintLayout>